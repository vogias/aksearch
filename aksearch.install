/**
 * Implements hook_schema().
 */
function aksearch_schema() {
$schema['aksearch_conf'] = array(
  'description' => 'Table for storing configuration for every eduOER Search page',
  'fields' => array(
    'nid' => array(
      'description' => 'the nid of aksearch node',
      'type' => 'int',
      'unsigned' => TRUE,
      'not null' => TRUE,
    ),
    'conf' => array(
      'description' => 'configuration for this aksearch node',
      'type' => 'text',
      'size' => 'medium',
      'not null' => FALSE,
    ),
  ),
  'primary key' => array('nid'),
);
	return $schema;
}